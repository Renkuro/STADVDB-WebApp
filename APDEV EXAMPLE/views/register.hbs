<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <meta name="description" content="">
        <meta name="keywords" content="">
        <meta name="author" content="Car Bartolome">
        <meta name="author" content="Simon Que">
        <meta name="author" content="Ian Racoma">
        <link rel="stylesheet" type="text/css" href="../css/base.css">
        <link rel="stylesheet" type="text/css" href="../css/signup.css">
        <link rel="stylesheet" href="../bootstrap/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="../js/validator.min.js" type="text/javascript"></script>
        <script src="../js/register.js" charset="utf-8 type="text/javascript"></script>
        <title>Sign Up to Web Calendar Application</title>
    </head>
    <body>

        <nav class="navbar sticky-top navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="images/Website_Logo.png" alt="" width="30" height="24" class="d-inline-block align-text-top">
                    <span>KalendarNiyo</span>
                </a>

                <form class="d-flex">
                    <button type='button' class="btn btn-outline-secondary" onclick="parent.location='register'">Sign Up</button>
                    <pre> </pre>
                    <button type='button' class="btn btn-outline-secondary" type="submit" onclick="parent.location='login'">Login</button>
                </form>
            </div>
        </nav>



        <div class="container-fluid d-flex flex-column text-center" style="height: calc(100% - 74px); background-image: url('images/background_mmmm.png');">
            <form class="form" id="signupform" action="/appnew" method="POST" style="margin-top: 30px">
                <div id="required_details">
                    <div id="required_header">
                        <h2 class="sec_head">Sign Up</h2>
                    </div>
                    <div class="section">
                        <div>
                            <label id="emaillbl" for="email">Email:</label>
                        </div>
                        <div class="input">
                            <input type="email" name="email" id="email" placeholder="email@youremail.com" required><br>
                        </div>
                    </div>
                    <div class="section">
                        <div>
                            <label id="usernamelbl" for="username">Username:</label>
                        </div>
                        <div class="input">
                            <input type="text" name="username" id="username" placeholder="username" required><br>
                        </div>
                    </div>
                    <div class="section">
                        <div>
                            <label id="passwordlbl" for="password">Password:</label>
                        </div>
                        <div class="input">
                            <input type="password" id="password" name="password" required><br>
                        </div>
                    </div>
                </div>
                <div id="optional_details">
                    <div id="required_header">
                        <h2 class="sec_head">Optional Details</h2>
                    </div>
                    <div class="section">
                        <div>
                            <label id="birthdatelbl" for="birthdate">Birthdate:</label>
                        </div>
                        <div class="input">
                            <input type="date" name="birthdate" id="birthdate" value="new Date()"><br>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-secondary" id="submit">Submit</button>
            </form>
        </div>
    </body>
</html>
